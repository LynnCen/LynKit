{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@lynkit/ui": ["../../packages/ui/src"],
      "@lynkit/hooks": ["../../packages/hooks/src"],
      "@lynkit/api": ["../../packages/api/src"],
      "@lynkit/icons": ["../../packages/icons/src"]
    }
  },
  "include": ["docs/**/*", "theme/**/*", "rspress.config.ts"]
}
