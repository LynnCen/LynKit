{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org/",
      "allowBranch": ["main", "master"],
      "ignoreChanges": [
        "**/*.md",
        "**/test/**",
        "**/docs/**"
      ]
    }
  },
  "packages": ["packages/*"]
}
